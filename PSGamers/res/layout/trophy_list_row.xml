<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView 
        android:id="@+id/trophyThumbnail_list"
        android:layout_width="48dip"
        android:layout_height="48dip"
	    android:layout_marginTop="15dip"
	    android:layout_marginLeft="5dip"
	    android:contentDescription="@string/psnAvatarDesc"/>
    
    <ImageView 
        android:id="@+id/trophyType_list"
        android:layout_width="20dip"
        android:layout_height="20dip"
	    android:layout_alignTop="@+id/trophyThumbnail_list"
	    android:layout_toRightOf="@+id/trophyThumbnail_list"
	    android:layout_marginLeft="5dip"
	    android:contentDescription="@string/psnAvatarDesc"/>
    
    <TextView
        android:id="@+id/trophyTitle_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/trophyType_list"
        android:layout_alignTop="@+id/trophyType_list"
        android:layout_marginLeft="3dip"
        android:singleLine="true"
        android:textSize="15dip"
        android:textStyle="bold"
        android:textColor="#B0BFD1" />
    
    <TextView
        android:id="@+id/trophyDesc_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/trophyThumbnail_list"
        android:layout_alignLeft="@+id/trophyType_list"
        android:layout_alignBottom="@+id/trophyThumbnail_list"
        android:singleLine="true"
        android:textSize="12dip"
        android:textStyle="bold"
        android:textColor="#CFCACB" />

</RelativeLayout>