<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#343434" />
            <stroke
                android:width="0.5dp"
                android:color="#F5F0F2" />
            <corners android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0C343434"
                android:endColor="#171717"
                android:angle="270" />
            <stroke
                android:width="0.5dp"
                android:color="#F5F0F2" />
            <corners   
                android:bottomRightRadius="3dp"
			   	android:bottomLeftRadius="3dp"
			 	android:topLeftRadius="3dp"
			 	android:topRightRadius="3dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>